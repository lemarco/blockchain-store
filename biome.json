{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true,
		"include": [
			"./frontend",
			"./backend"
		],
		"ignore": [
			"node_modules"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"include": [
			"./frontend",
			"./backend"
		],
		"ignore": [
			"node_modules"
		]
	},
	"formatter": {
		"include": [
			"./frontend",
			"./backend"
		],
		"ignore": [
			"node_modules"
		],
		"enabled": true,
		"indentWidth": 2,
		"lineWidth": 140
	}
}